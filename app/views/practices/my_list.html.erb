<div class="container-fluid">
  <div class="row">
    <div class="offset-1 col-4">
      <%= render "users/sidebar", user: @user %>
    </div>
    <div class="col-7">
      <%= render 'users/top-profile', user: @user %>
      <div class="row">
      <% @practices.each do |practice| %>
        <div class="col-6">
          <%= link_to practice_path(practice) do %>
          <div class="practice-card">
            <%= video_tag practice.video_url.to_s, style:"width:100%;" %>
            <div class="practice-card-body">
              <%= practice.title %>
            </div>
          </div>
          <% end %>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>
 