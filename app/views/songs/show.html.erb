<%= image_tag @song.thumbnail.to_s, :size =>"500x300"%>
<%= audio_tag(@song.voice) %>
<%= @song.title %>
<%= @song.description %>
<% if current_user.already_liked?(@song) %>
  <%= button_to like_path(@song), method: :delete, style: "border-style: none;" do %>
  <%= icon("fas", "heart") %>
  <% end %>
  <%= @song.likes.count %>
<% else %>
  <%= form_for @like, url:likes_path do |f| %>
  <%= f.hidden_field :song_id, :value => @song.id %>
  <%= f.button :type => "submit", style: "border-style: none;" do %>
  <%= icon("far", "heart") %>
  <% end %>
  <% end %>
  <%= @song.likes.count %>
<% end %>
<%= link_to user_path(@user) do %>
<%= @user.name %>
<% end %>
