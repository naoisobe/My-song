<%= image_tag @song.thumbnail.to_s, :size =>"500x300"%>
<%= audio_tag(@song.voice) %>
<%= @song.title %>
<%= @song.description %>
<% if current_user.already_liked?(@song) %>
  <%= button_to "いいねを取り消す", like_path(@song), method: :delete, style: "border-style: none;" do %>
  <%= icon("fas", "heart") %>
  <% end %>
  <%= @song.likes.count %>
<% else %>
  <%= button_to likes_path(@song), style: "border-style: none;" do %>
  <%= icon("far", "heart") %>
  <% end %>
  <%= @song.likes.count %>
<% end %>
<%= link_to user_path(@user) do %>
<%= @user.name %>
<% end %>
