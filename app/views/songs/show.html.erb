<div class="search">
<%= render 'layouts/search' %>
</div>
<div class="container-fluid">
  <div class="row">
    <div class="col-9">
      <!--投稿された歌 -->
      <div class="blur-back" style="background-image: url('<%= @song.thumbnail.url %>');">
      <% if @song.user == current_user %>
        <%= link_to edit_song_path(@song) do %>
          <p class="icon-edit"><%= icon("fas", "edit") %></p>
        <% end %>
      <% end %>
        <div class="main">
          <h3 class="title"><%= @song.title %></h3>
          <%= image_tag @song.thumbnail.to_s, style:"width:100%;"%>
        </div>
        <%= audio_tag @song.voice, class:"audio-bar" %>
        <!--いいね機能 -->
        <div id="like_buttons">
          <%= render 'likes/likes', song: @song %>
        </div>
      </div>
      <hr>
      <!--投稿したユーザー-->
      <%= render 'users/channel', user: @user %>
      <div class="post-description"> <%= @song.description %></div>
      <hr>
      <!--コメント欄-->
      <div id="comment_form">
      <%= render 'comments/form', song: @song, comment: @new_comment %>
      </div>
      <div id="comment_index">
        <% @comments.each do |comment| %>
        <%= render 'comments/comments', comment: comment, song: @song %>
        <% end %>
      </div>
    </div>
    <div class="col-3">
    <h3>他の投稿</h3>
      <% @songs.each do |song| %>
        <%= link_to song_path(song) do %>
          <div class="song-card">
            <%= image_tag song.thumbnail.to_s, class:"thumbnail" %>
            <div class="card-body">
              <h5><%= song.title %></h5>
              <div class="user-card">
                <%= link_to user_path(song.user) do %>
                  <%= image_tag song.user.profile_image.to_s, class:"post-profile" %>
                  <p class="user-name"><%= song.user.name %></p>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>


