<div class="search">
<%= render 'layouts/search' %>
</div>
<div class="container-fluid">
  <h1>ランキング</h1>
  <div class="row">
    <div class="col-1">
    </div>
    <div class="col-11">
      <div class="row">
        <% @all_ranks.each.with_index(1) do |song, i| %>
          <%= link_to song_path(song) do %>
            <div class="offset-2 col-6">
              <h4>第<%= i %>位</h4>
              <div class="song-card">
                <%= image_tag song.thumbnail.to_s, class:"rank-thumbnail" %>
                <div class="card-body">
                  <h5><%= song.title %></h5>
                  <div class="user-card">
                    <%= link_to user_path(song.user) do %>
                      <%= image_tag song.user.profile_image.to_s, size:"35x35", class:"user-profile profile-image" %>
                      <p class="user-name"><%= song.user.name %></p>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
