<div class="search">
<%= render 'layouts/search' %>
</div>
<div class="container">
  <div class="column-select-box">
    <a href="<%= songs_path %>" class="<%= "column-type" if current_page?(songs_path)%>"><h4>新着順</h4></a>
    <a href="<%= songs_rank_path %>" class="<%= "column-type" if current_page?(songs_rank_path)%>"><h4>ランキング</h4></a>
  </div>
  <div class="row contents">
    <% @all_ranks.each.with_index(1) do |song, i| %>
      <%= link_to song_path(song) do %>
        <div class="offset-xl-3 col-xl-6 offset-lg-2 col-lg-8 offset-md-2 col-md-8 offset-1 col-10 rank-card">
          <h2 class="rank-title">
          <%= icon("fas","crown", class:"crown#{i}") if i == 1 || i == 2 || i == 3 %><%= i %>位</h2>
          <div class="song-card">
            <%= image_tag song.thumbnail.to_s, class:"rank-thumbnail" %>
            <div class="card-body">
              <h5 class="rank-song-title over-string"><%= song.title %></h5>
              <%= link_to song_my_list_path(song.user) do %>
                <div class="rank-user-card user-card">
                    <%= image_tag song.user.profile_image.to_s, class:"post-profile" %>
                    <p class="user-name"><%= song.user.name %></p>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

