<div class="container">
  <div class="row">
    <div class="col-1">
    </div>
    <div class="col-11">
      <% @songs.each do |song| %>
        <div class="col-3">
          <%= link_to song_path(song) do %>
            <%= image_tag song.thumbnail.to_s, size:'300x200'  %>
            <%= song.title %>
          <% end %>
          <%= link_to user_path(song.user) do %>
            <%= image_tag song.user.profile_image.to_s, size:'30x30'  %>
            <%= song.user.name %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
