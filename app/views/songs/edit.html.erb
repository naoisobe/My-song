<div class="container">
  <div class="row">
    <div class="col text-center align-items-center">
      <%= form_for @song do |f| %>
        <div class="form-group">
          <%= f.label :title, "タイトル" %>
          <%= f.text_field :title %>
        </div>
        <div class="form-group">
          <%= f.label :description, "説明文" %>
          <%= f.text_area :description %>
        </div>
        <div class="form-group">
          <%= f.label :voice, "音声ファイル" %>
          <%= f.file_field :voice %>
        </div>
        <div class="form-group">
          <%= f.label :thumbnail, "サムネイル画像" %>
          <%= f.file_field :thumbnail %>
        </div>
        <%= f.submit %>
        <%= link_to "投稿削除", song_path(@song), method: :delete %>
      <% end %>
    </div>
  </div>
</div>
