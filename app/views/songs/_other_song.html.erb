<h3>他の投稿</h3>
  <% songs.each do |song| %>
    <%= link_to song_path(song) do %>
      <div class="song-card">
        <%= image_tag song.thumbnail.to_s, class:"thumbnail" %>
        <div class="card-body">
          <h5><%= song.title %></h5>
          <div class="user-card">
            <%= link_to user_path(song.user) do %>
              <%= image_tag song.user.profile_image.to_s, class:"post-profile" %>
              <p class="user-name"><%= song.user.name %></p>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
