<div class="container-fluid">
  <div class="row">
    <div class="col-4">
      <%= render "users/sidebar", user: @user %>
    </div>
    <div class="col-8">
      <div class="row">
      <% @song.each do |song| %>
        <div class="col-4">
        <%= link_to song_path(song) do %>
          <div class="song-card">
          <%= image_tag song.thumbnail.to_s, class:"thumbnail" %>
          <div class="card-body">
          <%= song.title %>
          </div>
          </div>
        <% end %>
        </div>
      <% end %>
      </div>
  </div>
</div>
</div>

