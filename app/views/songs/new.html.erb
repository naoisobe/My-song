<div class="container-fluid">
  <div class="row">
    <div class="col text-center align-items-center">
      <%= form_for @song do |f|%>
        <div class="form-group">
          <%= f.text_field :title, placeholder:"タイトル", class:"form-control form" %>
        </div>
        <div class="form-group">
          <%= f.text_area :description, placeholder: "説明文", class:"form-control form" %>
        </div>
        <div class="form-group">
          <%= f.label :voice, "音声ファイル" %>
          <%= f.file_field :voice %>
        </div>
        <div class="form-group">
          <%= f.label :thumbnail, "サムネイル画像" %>
          <%= f.file_field :thumbnail %>
        </div>
        <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>
