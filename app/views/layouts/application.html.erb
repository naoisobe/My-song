<!DOCTYPE html>
<html>
  <head>
    <title>Myapp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="<%= "full-back" if current_page?(new_user_registration_path) or current_page?(new_user_session_path)  %>">
      <header>
      <%= render "/layouts/header"%>
      </header>
      <%= yield %>
    </div>
  </body>
</html>
