<% if current_user.already_liked?(song) %>
  <%= link_to like_path(song), method: :delete, style: "border-style: none;", remote: true do %>
    <%= icon("fas", "heart") %>
  <% end %>
<% else %>
    <span>
      <%= link_to(likes_path(song), method: :post, remote: true) do %>
    <%= icon("far", "heart") %>
  <% end %>
<% end %>
<%= song.likes.count %>
