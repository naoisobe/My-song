<div class="option-icon">
<% if user_signed_in? and current_user.already_liked?(song) %>
  <%= link_to song_likes_path(song), method: :delete, style: "border-style: none;", remote: true do %>
    <%= icon("fas", "heart") %>
  <% end %>
<% else %>
  <%= link_to song_likes_path(song), method: :post, remote: true do %>
    <%= icon("far", "heart") %>
  <% end %>
<% end %>
<%= song.likes.count %>
