<div class="container-fluid">
  <div class="row">
    <div class="offset-1 col-4">
      <%= render "sidebar", user: @user %>
    </div>
    <div class="col-7 text-center align-items-center">
        <%= form_for @user do |f| %>
        <%= image_tag @user.profile_image.to_s, size:'200x200', class:"profile-image form-group" %>
        <div class="form-group">
          <label for="file_upload" class="btn btn-secondary user-edit-btn">
          <p>プロフィール画像</p>
          <%= f.file_field :profile_image, id:"file_upload" %>
          </label>
      </div>
      <div class="form-group">
        <%= f.label :name, "ユーザー名" %>
        <%= f.text_field :name %>
      </div>
      <div class="form-group">
        <%= f.label :description, "自己紹介文" %>
        <%= f.text_area :description, class:"user-des-form" %>
      </div>
        <%= f.submit "プロフィール保存", class:"btn btn-primary"%>
        <% end %>
    </div>
  </div>
</div>
