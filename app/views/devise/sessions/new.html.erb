<div class="container-fluid">
  <div class="row">
    <div class="user-form card">
      <h3>ログイン</h3>
        <%= content_tag(:p, flash[:error], :id => "flash_error", :class => "error-message") if flash[:error] %>
        <%= content_tag(:p, flash[:notice], :id => "flash_notice", :class => "error-message") if flash[:notice] %>
        <%= content_tag(:p, flash[:alert], :id => "flash_alert", :class => "error-message") if flash[:alert] %>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :email, "Eメール" %>
          <%= f.text_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password, "パスワード" %>
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <div class="token-password">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, "パスワードを記憶する" %>
            </div>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "ログイン", class:"btn btn-primary" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
